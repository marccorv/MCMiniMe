{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "es2020"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "esModuleInterop": true,
    "types": ["node", "react"]
  },
  "include": ["next-env.d.ts", "pages/**/*", "lib/supabaseClient.ts", "scripts/**/*"],
  "exclude": ["node_modules", ".next", "**/*.test.*"]
}
